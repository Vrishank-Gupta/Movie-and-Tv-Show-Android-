<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context="com.vrishankgupta.movies.MovieDetail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="200dp"
        android:layout_alignParentLeft="true"
        android:layout_height="200dp"
        android:id="@+id/detailImage"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/detailImage"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/detailTitle"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:text="Not Available"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailTitle"
        android:layout_toRightOf="@id/detailImage"
        android:layout_marginLeft="5dp"
        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:textSize="13sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/rating"
        android:textSize="15sp"
        android:text="Ratings:- "
        android:layout_below="@+id/date"
        android:layout_toRightOf="@id/detailImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/popularity"
        android:textSize="15sp"
        android:text="Popularity:- "
        android:layout_below="@+id/rating"
        android:layout_toEndOf="@id/detailImage"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl"
        android:weightSum="2"
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/youLvMovie"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/youButMovie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Trailer"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Similar"
            android:id="@+id/recommendMovie"/>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youLvMovie"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/overview"
            android:textSize="20sp"
            android:textStyle="italic"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:text="Overview"/>
    </ScrollView>
</RelativeLayout>




