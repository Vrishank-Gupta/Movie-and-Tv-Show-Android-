<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mov_cardView"
    app:cardElevation="960dp"
    android:padding="10dp"
    android:backgroundTint="@color/blue"
    android:background="@color/blue"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:layout_gravity="start"
            android:id="@+id/image_card"
            />

        <TextView
            android:id="@+id/lvTv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"

            android:layout_toEndOf="@+id/image_card"
            android:layout_marginStart="10dp"
            android:text="Not Available"
            android:textSize="23sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/lvTv_card"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="9dp"
            android:textSize="15sp"
            android:gravity="end"
            android:id="@+id/lvRating_card"
            android:text="N/A"/>

        <TextView
            android:id="@+id/editText_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_card"
            android:layout_marginTop="9dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:layout_below="@+id/lvRating_card"
            android:text="N/A"
            android:ems="10"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>